// 1 version
#include <iostream>
#include <iomanip>
#include <clocale>
#include <cmath>
using namespace std;

// рекурсивная функция
double calcn(double& x, int& n, int i, double a) {
    if (i == n) {
        return a;
    }
    return a + calcn(x, n, i + 1, a * (-4) * x * x / ((2 * i + 1) * (2 * i + 2)));
}

double calcy(double& x) {
    return 2 * (cos(x) * cos(x) - 1);
}

int main() {
    setlocale(LC_ALL, "ru");
    double x;
    int n;

    cout << "Введите x (0.1 <= x <= 1): ";
    cin >> x;

    if (x < 0.1 || x > 1) {
        cout << "x вне диапазона [0.1, 1].\n";
        return 1;
    }

    cout << "Введите n (число членов ряда): ";
    cin >> n; // 15

    while (n < 1) {
        cout << "Введите n, не меньше 1: ";
        cin >> n;
    }

    cout << fixed << setprecision(2) << "x = " << x << endl;
    cout << setprecision(6) << "s = " << calcn(x, n, 1, -4 * x * x / 2) << endl;
    cout << "y = " << calcy(x) << endl;

    return 0;
}

// 2 verdion

#include <iostream>
#include <iomanip>
#include <clocale>
#include <cmath>

using namespace std;

// Рекурсивная функция для вычисления части суммы
double calcn(double& x, int& n, int i, double a) {
    if (i == n) {
        return a;
    }
    return a + calcn(x, n, i + 1, a * (-4) * x * x / ((2 * i + 1) * (2 * i + 2)));
}

// Функция для вычисления y = 2 * (cos^2(x) - 1)
double calcy(double& x) {
    return 2 * (cos(x) * cos(x) - 1);
}

int main() {
    setlocale(LC_ALL, "ru");
    double x;
    int n;

    // Ввод значения x
    cout << "Введите x: ";
    cin >> x;

    // Ввод числа n с проверкой
    do {
        cout << "Введите целое n (>=1): ";
        cin >> n;
        if (n < 1) {
            cout << "Некорректное значение n. Повторите ввод.\n";
        }
    } while (n < 1);

    // Вычисление суммы с помощью рекурсии
    double a = -4 * x * x / 2; // начальный член
    double s = calcn(x, n, 1, a);

    // Вычисление функции calcy
    double y = calcy(x);

    // Вывод результатов
    cout << fixed << setprecision(6);
    cout << "x = " << x << "\n";
    cout << "s = " << s << "\n";
    cout << "y = " << y << "\n";

    return 0;
}



