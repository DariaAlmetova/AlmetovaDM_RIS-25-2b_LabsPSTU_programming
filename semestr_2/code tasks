// max - 1 version

#include <iostream>
#include <clocale>
#include <cstdlib>
using namespace std;
int main() {
	setlocale(LC_ALL, "ru");
	int n;
	int i1 = 0, s = 1;
	int arr[50];
	cout << "Введите размер массивa: ";
	cin >> n;
	for (int i = 0; i < n; i++) {
		arr[i] = -50 + rand() % 100;
		cout << arr[i] << " ";
	}
	cout << endl;
	int max = arr[0];
	for (int i = 1; i < n; i++) {
		if (arr[i] > max) {
			max = arr[i];
			i1 = i;
			s = 1;
		}
		else if (arr[i] == max) {
			s++;
		}
	}
	cout << "Максимальный элемент массива: " << max << endl;
	cout << "Его номер: " << i1 << endl;
	cout << "Количество максимальных элементов: " << s << endl;
	return 0;
}

// max - 2 version

#include <iostream>
#include <clocale>
using namespace std;
int main() {
	setlocale(LC_ALL, "ru");
	int n;
	int i1 = 0, s = 1;
	int arr[50];
	cout << "Введите размер массива: ";
	cin >> n;
	if (n <= 0 || n > 50) {
		cout << "Ошибка: неверный размер массива. Введите другой размер (0 < n < 51)." << endl;
		return 1;
	}
	cout << "Введите элементы массива: ";
	for (int i = 0; i < n; i++) {
		cin >> arr[i];
	}
	cout << endl;
	int max = arr[0];
	for (int i = 1; i < n; i++) {
		if (arr[i] > max) {
			max = arr[i];
			i1 = i;
			s = 1;
		}
		else if (arr[i] == max) {
			s++;
		}
	}
	cout << "Максимальный элемент массива: " << max << endl;
	cout << "Его номер: " << i1 << endl;
	cout << "Количество максимальных элементов: " << s << endl;
	return 0;
}

// turn - 1 version

#include <iostream>
#include <clocale>
#include <cstdlib>
using namespace std;
int main() {
	setlocale(LC_ALL, "ru");
	int n, m = 0;
	int arr[50];
	cout << "Введите размер массива: ";
	cin >> n;
	if (n <= 0 || n > 50) {
		cout << "Ошибка: неверный размер массива. Введите другой размер (0 < n < 51)." << endl;
		return 1;
	}
	for (int i = 0; i < n; i++) {
		arr[i] = -50 + rand() % 100;
		cout << arr[i] << " ";
	}
	cout << endl;
	for (int i = 0; i < n / 2; i++) {
		m = arr[i];
		arr[i] = arr[n - i - 1];
		arr[n - i - 1] = m;
	}
	cout << "Новый массив: ";
	for (int i = 0; i < n; i++) {
		cout << arr[i] << " ";
	}
	return 0;
}

// turn - 2 version

#include <iostream>
#include <clocale>
using namespace std;
int main() {
	setlocale(LC_ALL, "ru");
	int n, m = 0;
	int arr[50];
	cout << "Введите размер массива: ";
	cin >> n;
	if (n <= 0 || n > 50) {
		cout << "Ошибка: неверный размер массива. Введите другой размер (0 < n < 51)." << endl;
		return 1;
	}
	cout << "Введите элементы массива: ";
	for (int i = 0; i < n; i++) {
		cin >> arr[i];
	}
	cout << endl;
	for (int i = 0; i < n / 2; i++) {
		m = arr[i];
		arr[i] = arr[n - i - 1];
		arr[n - i - 1] = m;
	}
	cout << "Новый массив: ";
	for (int i = 0; i < n; i++) {
		cout << arr[i] << " ";
	}
	return 0;
}
