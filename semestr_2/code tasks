// max - 1 version

#include <iostream>
#include <clocale>
#include <cstdlib>
using namespace std;
int main() {
	setlocale(LC_ALL, "ru");
	int n;
	int i1 = 0, s = 1;
	int arr[50];
	cout << "Введите размер массивa: ";
	cin >> n;
	for (int i = 0; i < n; i++) {
		arr[i] = -50 + rand() % 100;
		cout << arr[i] << " ";
	}
	cout << endl;
	int max = arr[0];
	for (int i = 1; i < n; i++) {
		if (arr[i] > max) {
			max = arr[i];
			i1 = i;
			s = 1;
		}
		else if (arr[i] == max) {
			s++;
		}
	}
	cout << "Максимальный элемент массива: " << max << endl;
	cout << "Его номер: " << i1 << endl;
	cout << "Количество максимальных элементов: " << s << endl;
	return 0;
}

// max - 2 version

#include <iostream>
#include <clocale>
using namespace std;
int main() {
	setlocale(LC_ALL, "ru");
	int n;
	int i1 = 0, s = 1;
	int arr[50];
	cout << "Введите размер массива: ";
	cin >> n;
	if (n <= 0 || n > 50) {
		cout << "Ошибка: неверный размер массива. Введите другой размер (0 < n < 51)." << endl;
		return 1;
	}
	cout << "Введите элементы массива: ";
	for (int i = 0; i < n; i++) {
		cin >> arr[i];
	}
	cout << endl;
	int max = arr[0];
	for (int i = 1; i < n; i++) {
		if (arr[i] > max) {
			max = arr[i];
			i1 = i;
			s = 1;
		}
		else if (arr[i] == max) {
			s++;
		}
	}
	cout << "Максимальный элемент массива: " << max << endl;
	cout << "Его номер: " << i1 << endl;
	cout << "Количество максимальных элементов: " << s << endl;
	return 0;
}

// turn - 1 version

#include <iostream>
#include <clocale>
#include <cstdlib>
using namespace std;
int main() {
	setlocale(LC_ALL, "ru");
	int n, m = 0;
	int arr[50];
	cout << "Введите размер массива: ";
	cin >> n;
	if (n <= 0 || n > 50) {
		cout << "Ошибка: неверный размер массива. Введите другой размер (0 < n < 51)." << endl;
		return 1;
	}
	for (int i = 0; i < n; i++) {
		arr[i] = -50 + rand() % 100;
		cout << arr[i] << " ";
	}
	cout << endl;
	for (int i = 0; i < n / 2; i++) {
		m = arr[i];
		arr[i] = arr[n - i - 1];
		arr[n - i - 1] = m;
	}
	cout << "Новый массив: ";
	for (int i = 0; i < n; i++) {
		cout << arr[i] << " ";
	}
	return 0;
}

// turn - 2 version

#include <iostream>
#include <clocale>
using namespace std;
int main() {
	setlocale(LC_ALL, "ru");
	int n, m = 0;
	int arr[50];
	cout << "Введите размер массива: ";
	cin >> n;
	if (n <= 0 || n > 50) {
		cout << "Ошибка: неверный размер массива. Введите другой размер (0 < n < 51)." << endl;
		return 1;
	}
	cout << "Введите элементы массива: ";
	for (int i = 0; i < n; i++) {
		cin >> arr[i];
	}
	cout << endl;
	for (int i = 0; i < n / 2; i++) {
		m = arr[i];
		arr[i] = arr[n - i - 1];
		arr[n - i - 1] = m;
	}
	cout << "Новый массив: ";
	for (int i = 0; i < n; i++) {
		cout << arr[i] << " ";
	}
	return 0;
}

// vozrastanie - 1 version

#include <iostream>
#include <clocale>
using namespace std;

bool s(int arr[], int size) {
    for (int i = 1; i < size; i++) {
        if (arr[i] < arr[i - 1]) {
            return false; // если текущий элемент меньше предыдущего, массив не отсортирован
        }
    }
    return true; // все элементы идут в порядке возрастания
}

int main() {
    setlocale(LC_ALL, "RU");
    int arr[] = { 1, 2, 3, 4, 5 };
    int size = sizeof(arr) / sizeof(arr[0]);

    if (s(arr, size)) {
        cout << "Массив отсортирован по возрастанию." << endl;
    }
    else {
        cout << "Массив не отсортирован по возрастанию." << endl;
    }

    return 0;
}

// vozrastanie - 2 version

#include <iostream>
#include <clocale>
using namespace std;

int main() {
    setlocale(LC_ALL, "RU");
    const int size = 5;
    int arr[size] = { 1, 2, 3, 4, 5 };

    bool s = true; // флажок, предполагаем, что массив отсортирован

    for (int i = 1; i < size; i++) {
        if (arr[i] < arr[i - 1]) {
            s = false; // нашли нарушение порядка
            break;
        }
    }

    if (s) {
        cout << "Массив отсортирован по возрастанию." << endl;
    }
    else {
        cout << "Массив не отсортирован по возрастанию." << endl;
    }

    return 0;
}

// vozrastanie - 3 version

#include <iostream>
#include <clocale>
using namespace std;

int main() {
    setlocale(LC_ALL, "RU");

    const int size = 5;
    int arr[size];

    cout << "Введите " << size << " целых чисел:" << endl;
    for (int i = 0; i < size; ++i) {
        cin >> arr[i];
    }

    bool s = true;

    for (int i = 1; i < size; ++i) {
        if (arr[i] < arr[i - 1]) {
            s = false; // нашли элемент, нарушающий порядок возрастания
            break;
        }
    }

    if (s) {
        cout << "Массив отсортирован по возрастанию." << endl;
    }
    else {
        cout << "Массив не отсортирован по возрастанию." << endl;
    }

    return 0;
}

// vozrastanie - 4 version

#include <iostream>
#include <clocale>
using namespace std;

bool s(int arr[], int size) {
    for (int i = 1; i < size; i++) {
        if (arr[i] < arr[i - 1]) {
            return false; // если текущий элемент меньше предыдущего, массив не отсортирован
        }
    }
    return true; // все элементы идут в порядке возрастания
}

int main() {
    setlocale(LC_ALL, "RU");
    int size;

    cout << "Введите размер массива: ";
    cin >> size;

    int* arr = new int[size];

    cout << "Введите элементы массива:\n";
    for (int i = 0; i < size; i++) {
        cin >> arr[i];
    }

    if (s(arr, size)) {
        cout << "Массив отсортирован по возрастанию." << endl;
    }
    else {
        cout << "Массив не отсортирован по возрастанию." << endl;
    }

    delete[] arr; // освобождение памяти

    return 0;
}

// vozrastanie - 5 version

#include <iostream>
#include <clocale>
using namespace std;

int main() {
    setlocale(LC_ALL, "RU");
    int size;

    cout << "Введите размер массива: ";
    cin >> size;

    int* arr = new int[size];

    cout << "Введите элементы массива:\n";
    for (int i = 0; i < size; i++) {
        cin >> arr[i];
    }

    bool s = true; // предполагаем, что отсортирован
    for (int i = 1; i < size; i++) {
        if (arr[i] < arr[i - 1]) {
            s = false; // нашли нарушение порядка
            break;
        }
    }

    if (s) {
        cout << "Массив отсортирован по возрастанию." << endl;
    }
    else {
        cout << "Массив не отсортирован по возрастанию." << endl;
    }

    delete[] arr; // освобождение памяти

    return 0;
}
