#include <iostream>
#include <string>
#include <clocale>

using namespace std;

int main() {
    setlocale(LC_ALL, "ru");
    cout << "Введите строку: ";
    string s;
    getline(cin, s);

    // удаляем точку в конце строки, если она есть
    if (!s.empty() && s.back() == '.') {
        s.pop_back();
    }

    int len = s.length();

    // разделяем строку на слова
    string words[255]; // максимум 255 слов в массиве строк для хранения отдельных слов, выделенных из строки
    int c = 0; // счетчик количества слов, добавленных в массив words

    int i = 0; // индекс текущей позиции в строке при разбиении строки на слова
    while (i < len) {
        // пропускаем пробелы
        while (i < len && s[i] == ' ') {
            i++;
        }
        // собираем слово
        string w = ""; // временная переменная для хранения текущего слова, которое собирается из строки
        while (i < len && s[i] != ' ') {
            w += s[i];
            i++;
        }
        if (!w.empty()) {
            words[c] = w;
            c++;
        }
    }

    // проверяем, есть ли слова
    if (c == 0) {
        cout << "Строка пустая или содержит только пробелы." << endl;
        return 0;
    }

    // создаем массив со флагом для отметки уже выведенных слов
    bool p[255] = { false }; // массив булевых значений для отметки, было ли слово уже выведено (используется для исключения повторов)

    // выводим слова, встречающиеся только один раз
    cout << "Слова, встречающееся один раз: ";
    bool f = true; // чтобы не ставить запятую перед первым словом

    for (int i = 0; i < c; i++) {
        if (p[i]) continue; // уже выведено
        int cnt = 0;
        for (int j = 0; j < c; j++) { // индекс для вложенного цикла, ищущий совпадения текущего слова в массиве words
            if (words[i] == words[j]) {
                cnt++; // счетчик количества вхождений текущего слова в массив words
            }
        }
        if (cnt == 1) {
            if (!f) {
                cout << ", ";
            }
            cout << words[i];
            f = false;
            p[i] = true; // помечаем как выведенное
        }
    }
    cout << endl;

    return 0;
}
